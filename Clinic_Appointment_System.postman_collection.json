{
  "info": {
    "name": "Clinic Appointment Management System",
    "description": "Complete API collection for testing the clinic appointment management system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Doctor APIs",
      "item": [
        {
          "name": "Add Doctor",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Dr. Emma Wilson\",\n  \"specialization\": \"Dermatology\",\n  \"availableSlots\": [\n    \"2025-08-03T09:00:00\",\n    \"2025-08-03T10:00:00\",\n    \"2025-08-03T11:00:00\",\n    \"2025-08-04T14:00:00\",\n    \"2025-08-04T15:00:00\"\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/doctors",
              "host": ["{{base_url}}"],
              "path": ["doctors"]
            }
          }
        },
        {
          "name": "Get All Doctors",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/doctors",
              "host": ["{{base_url}}"],
              "path": ["doctors"]
            }
          }
        },
        {
          "name": "Get Doctor by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/doctors/1",
              "host": ["{{base_url}}"],
              "path": ["doctors", "1"]
            }
          }
        },
        {
          "name": "Get Doctors by Available Date",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/doctors?date=2025-08-03",
              "host": ["{{base_url}}"],
              "path": ["doctors"],
              "query": [
                {
                  "key": "date",
                  "value": "2025-08-03"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Patient APIs",
      "item": [
        {
          "name": "Register Patient",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"age\": 28,\n  \"gender\": \"Male\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/patients",
              "host": ["{{base_url}}"],
              "path": ["patients"]
            }
          }
        },
        {
          "name": "Get All Patients",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/patients",
              "host": ["{{base_url}}"],
              "path": ["patients"]
            }
          }
        }
      ]
    },
    {
      "name": "Appointment APIs",
      "item": [
        {
          "name": "Book Appointment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"doctorId\": 1,\n  \"patientId\": 1,\n  \"slot\": \"2025-08-03T09:00:00\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/appointments",
              "host": ["{{base_url}}"],
              "path": ["appointments"]
            }
          }
        },
        {
          "name": "Get All Appointments",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/appointments",
              "host": ["{{base_url}}"],
              "path": ["appointments"]
            }
          }
        },
        {
          "name": "Get Appointments by Doctor",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/appointments/doctor/1",
              "host": ["{{base_url}}"],
              "path": ["appointments", "doctor", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Test Scenarios",
      "item": [
        {
          "name": "Test Double Booking Prevention",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"doctorId\": 1,\n  \"patientId\": 2,\n  \"slot\": \"2025-08-03T09:00:00\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/appointments",
              "host": ["{{base_url}}"],
              "path": ["appointments"]
            }
          }
        },
        {
          "name": "Test Invalid Doctor ID",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"doctorId\": 999,\n  \"patientId\": 1,\n  \"slot\": \"2025-08-03T10:00:00\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/appointments",
              "host": ["{{base_url}}"],
              "path": ["appointments"]
            }
          }
        },
        {
          "name": "Test Unavailable Slot",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"doctorId\": 1,\n  \"patientId\": 1,\n  \"slot\": \"2025-08-03T12:00:00\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/appointments",
              "host": ["{{base_url}}"],
              "path": ["appointments"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080"
    }
  ]
}
